package chap05.LAB;

public class Array3_LAB {
	public static void main(String[] args) {
		// arr[3][20] 
		//   arr[0] : 2의 배수를 저장 
		//   arr[1] : 3의 배수를 저장 
		//   arr[2] : 5의 배수를 저장 
		// for문을 사용해서 저장 ,  for 문을 사용해서 출력 
		// 완료시간 : 3시 15분까지 
		
		//1. 배열 선언 
		int[][] arr = new int[3][20];
		//2. for 문을 사용해서 각 행의 값을 입력 
		for (int i = 0, j = 2,k =3, l=5; i <arr[i].length; i++) {
			arr[0][i] = j; //2의 배수 저장 
			arr[1][i] = k; //3의 배수 저장
			arr[2][i] = l; //5의 배수 저장 
			
			j+=2;   // j = j + 2
			k+=3; 	// k = k + 3
			l+=5; 	// l = l + 5
		}
		
		
		
		

	}
}
