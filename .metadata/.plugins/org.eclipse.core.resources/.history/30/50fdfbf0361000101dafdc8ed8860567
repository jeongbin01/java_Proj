package chap04.EX04;

public class While_Statement {

	public static void main(String[] args) {
		// while  문 :  조건이 참일 동안 반복.  for 문으로 변환가능 
		/*
		       초기값
		       while (조건) {
		           조건일 참일동안 실행; 
		           증감식
		       }
		       
		       for (초기값 ; 조건 ; 증감식) {
		           조건이 참일 동안 실행; 
		       }
		       
		 */

		// 1부터 100까지의 정수 출력 
		
		int i = 1; 
		while (i <= 100) {
			System.out.println(i);
			
		}
		
		
		
		
		
	}

}
